<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
<%- include ('./navigationBar/navbarAdmin')%>
<div class="register-account ptb-100 ptb-sm-60">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="register-title">
          <h3 class="mb-10">Registration</h3>
          <p class="mb-10">If you have an account please skip this step.</p>
        </div>
      </div>
    </div>
    <!-- Row End -->
    <div class="row">
      <div class="col-sm-12">
        <form action="/auth/register" method="post">
          <fieldset>
            <legend>Please fill in the following information:</legend>
            <div class="form-group d-md-flex align-items-md-center">
              <label class="control-label col-md-2" for="l-name"><span
                      class="require">*</span>Name</label>
              <div class="col-md-5">
                <input type="text"  class="form-control"
                       id="l-name" name="name" placeholder="TÃªn" minlength="2"
                       maxlength="15" >
              </div>
              <label class="control-label col-md-5" id="checkLastName"
                     style="text-align: left; color: orange;"></label>
            </div>
            <div class="form-group d-md-flex align-items-md-center">
              <label class="control-label col-md-2" for="email"><span
                      class="require">*</span>Email</label>
              <div class="col-md-5">
                <input type="email" name="email" class="form-control" id="email" placeholder="Email" required>
              </div>
              <label class="control-label col-md-5" id="checkEmail"
                     style="text-align: left; color: orange;"></label>
            </div>
          </fieldset>
          <fieldset>
            <legend>Password: </legend>
            <div class="form-group d-md-flex align-items-md-center">
              <label class="control-label col-md-2" for="pwd"><span
                      class="require">*</span>Password:</label>
              <div class="col-md-5">
                <input type="password" name="password" oninput="check()"
                       class="form-control" id="password" placeholder="Password"
                       minlength="5" maxlength="40" required>
              </div>
              <label class="control-label col-md-5" id="checkPassword"
                     style="text-align: left; color: orange;"></label>
            </div>
            <div class="form-group d-md-flex align-items-md-center">
              <label class="control-label col-md-2" for="pwd-confirm"><span
                      class="require">*</span>Re-Pass</label>
              <div class="col-md-5">
                <input type="password" oninput="check()"
                       class="form-control" id="password2"
                       placeholder="Re-Password" minlength="5" maxlength="40"
                       required>
                <p id="wrongPassword"></p>
              </div>
              <label class="control-label col-md-5" id="retypePassword"
                     style="text-align: left; color: orange;"></label>
            </div>
          </fieldset>
          <div class="terms">
            <div class="float-md-center">
              <button type="submit" id="button" class="btn btn-primary">Registration</button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <!-- Row End -->
  </div>
  <!-- Container End -->
</div>
</body>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<script>
  function check() {
    let pass1 = document.getElementById('password').value
    let pass2 = document.getElementById('password2').value
    let button = document.getElementById('button')
    let input = document.getElementById('wrongPassword')
    if (pass1 === pass2) {
      button.disabled = false;
      input.innerHTML = '<p class="text-success">Password matches</p>'
    }else {
      button.disabled = true;
      input.innerHTML = '<p class="text-danger">Password doesn\'t match</p>'
    }
  }
</script>
</html>