<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>
<body>
<%- include ('../navigationBar/navbarUser') %>
<div class="col-12">
    <span style="margin-left: 30px">Find blog:</span>
    <input type="text" class="d-inline-block" style="margin-left: 20px" onkeyup="searchBlog1(this.value)">
    <table class="table table-image">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Date</th>
            <th scope="col">Title</th>
            <th scope="col">Image</th>
            <th scope="col">Status</th>
            <th scope="col"></th>

        </tr>
        </thead>
        <tbody id="list-blog">
        <% blog.forEach((item, index) => { %>
            <tr>
                <th scope="row">
                    <a href="/user/blog/<%= item._id %>"><%= index + 1 %>
                    </a></th>
                <td class="w-20">
                    <a href="/user/blog/<%= item._id %>"><%= item.date %>
                    </a></td>
                <td class="w-20"><a href="/user/blog/<%= item._id %>"><%= item.title %> </a></td>
                <td class="w-20">
                    <a href="/user/blog/<%= item._id %>"><img src="/image/upload/<%= item.image %>" alt=""></a></td>
                <td class="w-20"><a href="/user/blog/<%= item._id %>"><%= item.status %></a></td>
                <td>
                    <a href="/user/update-blog/<%= item._id %>" class="btn btn-primary">Update</a>
                    <a onclick="return confirm('Are you sure you want to delete this blog?')"
                       href="/user/delete-blog/<%= item._id %>" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>

</body>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
